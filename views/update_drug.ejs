<!-- add header -->
<%- include('includes/_header') %>
<!-- end header -->

<!-- Main section -->
<main id="main">
  <a href="/manage">
    <span><i class="fas fa-arrow-left"></i> Back to Manage</span>
  </a>

  <h2>Edit <%= drug.name %></h2>
  <p>Use the form below to update <%= drug.name %></p>

  <!-- Update drug form -->
  <form id="update_drug">
    <div class="container d-flex flex-column align-items-stretch">
      
      <!-- Hidden ID -->
      <input type="hidden" id="id" name="id" value="<%= drug._id %>">

      <div class="row mb-3 form-group justify-content-center">             
        <label for="name" class="col-3 col-form-label">Drug Name</label>
        <input type="text" id="name" name="name" value="<%= drug.name %>" 
               placeholder="Drug Name" class="col-xs-8 col-md-4" required>
      </div>

      <div class="row mb-3 form-group justify-content-center">
        <label for="card" class="col-3 col-form-label">Tablets per Card</label>
        <input type="number" id="card" name="card" value="<%= drug.card %>" 
               placeholder="Tablets per Card" min="1" max="500" 
               class="col-xs-8 col-md-4" required>
      </div>

      <div class="row mb-3 form-group justify-content-center">
        <label for="pack" class="col-3 col-form-label">Tablets per Pack</label>
        <input type="number" id="pack" name="pack" value="<%= drug.pack %>" 
               placeholder="Tablets per Pack" min="1" max="500" 
               class="col-xs-8 col-md-4" required>
      </div>

      <div class="row mb-3 form-group justify-content-center">
        <label for="perDay" class="col-3 col-form-label">Taken per Day</label>
        <input type="number" id="perDay" name="perDay" value="<%= drug.perDay %>" 
               placeholder="Taken per Day" min="1" max="500" 
               class="col-xs-8 col-md-4" required>
      </div>

      <div class="row mb-3 form-group justify-content-center">             
        <label for="dosage" class="col-3 col-form-label">Dosage</label>
        <input type="text" id="dosage" name="dosage" value="<%= drug.dosage %>" 
               placeholder="Dosage (e.g. 1-morning,1-night)" 
               class="col-md-4 col-xs-8" required>
      </div>

      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Update Drug</button>
      </div>
    </div>
  </form>
</main>
<!-- End main section -->

<!-- Load main.js (handle update here instead of inline script) -->
<script src="/js/main.js"></script>

<!-- add footer -->
<%- include('includes/_footer') %>
<!-- end footer -->
